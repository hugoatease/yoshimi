<div class="row">
  <div class="col-sm-4 col-sm-offset-4">
    <div class="page-header">
      <div class="text-center">
        {{#if logo_url}}
        <img src="{{logo_url}}" height="100" />
        {{/if}}
        <h3>{{polyglot lang 'signup'}}</h3>
      </div>
    </div>
    {{#each errors}}
    <div class="alert alert-warning">
      <b>Error.</b> {{{this}}}
    </div>
    {{/each}}
    {{#unless validation_sent}}
      {{#unless email_only}}
      <form method="post">
        {{#unless email_token}}
        <div class="form-group">
          <label for="email">{{polyglot lang 'email'}}</label>
          <input type="email" class="form-control" id="email" name="email" placeholder="{{polyglot lang 'email'}}" />
        </div>
        {{else}}
        <input type="hidden" name="email_token" value="{{email_token}}" />
        {{/unless}}
        <div class="form-group">
          <label for="firstname">{{polyglot lang 'firstName'}}</label>
          <input type="text" class="form-control" id="firstname" name="firstname" placeholder="{{polyglot lang 'firstName'}}" />
        </div>
        <div class="form-group">
          <label for="lastname">{{polyglot lang 'lastName'}}</label>
          <input type="text" class="form-control" id="lastname" name="lastname" placeholder="{{polyglot lang 'lastName'}}" />
        </div>
        <div class="form-group">
          <label for="password">{{polyglot lang 'password'}}</label>
          <input type="password" class="form-control" id="password" name="password" placeholder="{{polyglot lang 'password'}}" />
        </div>
        <div class="form-group">
          <label for="password_confirm">{{polyglot lang 'passwordConfirm'}}</label>
          <input type="password" class="form-control" id="password_confirm" name="password_confirm" placeholder="{{polyglot lang 'passwordConfirm'}}" />
        </div>
        <div class="text-center">
          <button type="submit" class="btn btn-primary">{{polyglot lang 'signup'}}</button>
        </div>
      </form>
      {{else}}
      <form method="post">
        <div class="form-group">
          <label for="email">{{polyglot lang 'email'}}</label>
          <input type="email" class="form-control" id="email" name="email" placeholder="{{polyglot lang 'email'}}" />
        </div>
        <div class="text-center">
          <button type="submit" class="btn btn-primary">{{polyglot lang 'signup'}}</button>
        </div>
      </form>
      {{/unless}}
    {{else}}
    <div class="alert alert-info">
      <b>Validation mail sent.</b> Please check your inbox and click the link to confirm your email address.
    </div>
    {{/unless}}
  </div>
</div>
